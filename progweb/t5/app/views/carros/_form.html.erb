<%= form_with(model: @carro, local: true) do |form| %>
  <% if @carro.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@carro.errors.count, "erro") %> proibiu este carro de ser salvo:</h2>
      <ul>
        <% @carro.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :crv, style: "display: block" %>
    <%= form.text_field :crv %>
  </div>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :marca, style: "display: block" %>
    <%= form.text_field :marca %>
  </div>

  <div>
    <%= form.label :rg, style: "display: block" %>
    <%= form.text_field :rg, name: 'carro[rg]' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

